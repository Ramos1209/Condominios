@using Microsoft.AspNetCore.Identity
@using GerenciadorCondominios.BLL.Models
@inject SignInManager<Usuario> _userInManager

@if(_userInManager.IsSignedIn(User))
{
    <form asp-action="Logout" asp-controller="Usuarios" id="formularioLogout">
        <ul>
            <li>
                @* ReSharper disable once UnknownCssClass *@
                <a class="nav-link write-text" style="cursor: pointer;" onclick="document.getElementById('formularioLogout').submit();">Logout</a>
            </li>
        </ul>

    </form>
}