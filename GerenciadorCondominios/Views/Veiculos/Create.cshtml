@model GerenciadorCondominios.BLL.Models.Veiculo

@{
    ViewData["Title"] = "Novo veiculo";
}

<div class="collection with-header">
    <form asp-action="Create">
    <div class="collection-header green darken-3">
        <h6 class="write-text">Novo veiculo</h6>
    </div>
        <div class="collection-item">
            <div asp-validation-summary="ModelOnly" class="red-text text-darken-4"></div>
            
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Nome" class="validate" id="nome"/>
                    <label asp-for="Nome" id="nome"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Nome"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Marca" class="validate" id="marca"/>
                    <label asp-for="Marca" id="marca"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Marca"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Cor" class="validate" id="cor"/>
                    <label asp-for="Cor" id="cor"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Cor"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="Placa" class="validate" id="placa"/>
                    <label asp-for="Placa" id="placa"></label>
                    <span class="red-text text-darken-4" asp-validation-for="Placa"></span>
                </div>
            </div>
         
        </div>
        <div class="colletion-item">
            <button type="submit" class="btn-small green darken-3">Salvar</button> &ensp;
            <a asp-controller="Usuarios"  asp-action="MinhasInformacao">Voltar</a>
        </div>

    </form>
</div>


@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.mim.js"></script>
    <script src="js/mascaras.js"></script>
}


