@model List<GerenciadorCondominios.ViewModels.FuncaoUsuarioViewModel>
@{
    ViewData["Title"] = "Atualizar funções usuarios"+ @ViewBag.Nome;
}

<form asp-action="GerenciarUsuario" method="post">
    <div asp-validation-summary="All"></div>
    
    <div class="collection with-header">
        <div class="collection-header grey darken-1">
            <h6 class="white-text">Atualizar funções do usuario @ViewBag.Nome</h6>
        </div>
        
        
        <div class="collection-item">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <label>
                    <input type="checkbox" asp-for="@Model[i].isSelecioanda"/>
                    <span asp-for="@Model[i].isSelecioanda">@Model[i].Nome - @Model[i].Descricao</span>
                    <input type="hidden" asp-for="@Model[i].FuncaoId"/>
                    <input type="hidden" asp-for="@Model[i].Nome"/>
                </label>
                <br/>
            }
            <div class="collection-item">
                <input type="submit" value="Atualizar" class="btn-small blue darken-3"/>&nbsp;
                <a asp-controller="Usuarios"  asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</form>

